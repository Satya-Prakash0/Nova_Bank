<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UsersDetailActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:srcCompat="@drawable/baseline_account_balance_24" />

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:textStyle="bold"
             android:layout_marginTop="20dp"
             android:text="User Name:"
             android:textColor="@color/black"/>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="username"
            android:textColor="@color/lightdark"
            />
     </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:text="Account Number: "
                android:textColor="@color/black"/>
        <TextView
            android:id="@+id/account_Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/lightdark"
            android:layout_marginTop="20dp"
            android:paddingLeft="8dp"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/baseline_format_list_numbered_24"
            android:ems="10"
            android:hint="Account no." />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:text="Phone No.: "
                android:textStyle="bold"
                android:textColor="@color/black"/>
        <TextView
            android:id="@+id/registration_phoneNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="8dp"
            android:drawableLeft="@drawable/baseline_local_phone_24"
            android:drawablePadding="5dp"
            android:ems="10"
            android:textColor="@color/lightdark"
            android:hint="phone number"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:text="Email id: "
                android:textStyle="bold"
                android:textColor="@color/black"/>
        <TextView
            android:id="@+id/user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="8dp"
            android:drawableLeft="@drawable/baseline_email_24"
            android:drawablePadding="5dp"
            android:ems="10"
            android:textColor="@color/lightdark"
            android:hint="someone@gmail.com" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:text="IFSC Code: "
                android:textStyle="bold"
                android:textColor="@color/black"/>
        <TextView
            android:id="@+id/ifsccode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="8dp"
            android:drawableLeft="@drawable/baseline_wifi_protected_setup_24"
            android:drawablePadding="5dp"
            android:ems="10"
            android:textColor="@color/lightdark"
            android:hint="ifsc code" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:text="Balance: "
                android:textStyle="bold"
                android:textColor="@color/black"/>
        <TextView
            android:id="@+id/curr_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="8dp"
            android:drawableLeft="@drawable/baseline_currency_rupee_24"
            android:drawablePadding="5dp"
            android:ems="10"
            android:textColor="@color/lightdark"
            android:hint="amount" />
        </LinearLayout>


        <Button
            android:id="@+id/transferMoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purple_200"
            android:layout_marginTop="20dp"
            android:padding="13dp"
            android:elevation="10dp"
            android:text="Transfer Money"
            android:textStyle="bold"
            app:cornerRadius="30dp"
            />


    </LinearLayout>

</LinearLayout>